{
  "bindings": {
    "/actions/main": {
      "haptics": [
        {
          "output": "/actions/main/out/left_hand_haptics",
          "path": "/user/hand/left/output/haptic"
        },
        {
          "output": "/actions/main/out/right_hand_haptics",
          "path": "/user/hand/right/output/haptic"
        }
      ],
      "poses": [
        {
          "output": "/actions/main/in/left_hand_pose",
          "path": "/user/hand/left/pose/grip"
        },
        {
          "output": "/actions/main/in/right_hand_pose",
          "path": "/user/hand/right/pose/grip"
        }
      ],
      "sources": [
        {
          "inputs": {
            "pull": {
              "output": "/actions/main/in/left_trigger"
            }
          },
          "mode": "trigger",
          "path": "/user/hand/left/input/trigger"
        },
        {
          "inputs": {
            "pull": {
              "output": "/actions/main/in/right_trigger"
            }
          },
          "mode": "trigger",
          "path": "/user/hand/right/input/trigger"
        },
        {
          "inputs": {
            "click": {
              "output": "/actions/main/in/left_menu_button"
            }
          },
          "mode": "button",
          "path": "/user/hand/left/input/application_menu"
        },
        {
          "inputs": {
            "click": {
              "output": "/actions/main/in/right_menu_button"
            }
          },
          "mode": "button",
          "path": "/user/hand/right/input/application_menu"
        }
      ]
    }
  },
  "controller_type": "hyperealvr_controller"
}